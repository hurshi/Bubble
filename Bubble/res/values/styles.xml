<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button_connect">
        <item name="android:background">@drawable/button_connect</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_round_angle">
        <item name="android:background">@drawable/round_angle_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_round_angle</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="boldText">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#99CC00</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#33B5E5</item>
    </style>

</resources>